<% if @student.errors.any? %>
<div class="container">
  <div class="row sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel red lighten-2">
        <span class="white-text">
          <strong><%= pluralize(@student.errors.count, "error") %></strong>
          prohibited your profile for being created

          <ul>
            <% @student.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </span>
      </div>
    </div>
  </div>
</div>
<% end %>

<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h3 class="header">Edit your profile</h3>
        <div class="row">
          <%= form_for(@student, html: {class: "col s12"})  do |f| %>
          <div class="row">
            <div class="input-field col s12">
              <%= f.text_field :name, 
                  placeholder: "Enter your full name", 
                  autofocus: true %>
              <%= f.label :name %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.text_field :email,
                  placeholder: "Enter your email address" %>
              <%= f.label :email %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.button :submit, 
                  class: "btn orange waves-effect waves-light right" do %>
                <i class='material-icons right'>send</i>Submit Changes
              <%end%>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>